<p id="notice"><%= notice %></p>

<h1 id="listing_user">List of Users</h1>


  <% if (user_signed_in? && current_user.admin?) %>
  <table class="table table-striped">

  <thead>
    <tr >
      <th id="listuser_name">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
        <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%></td>
      </tr>
      
    <% end %>
  <!--  <%= link_to 'New User', new_user_path %> -->
 <% end %>
  
  <% if (!user_signed_in? || (user_signed_in? && !current_user.admin?)) %>
    <h2>Sorry. This part can only seen by the Admin.</h2>
 <% end %>
  
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , :class => "btn btn-primary"%>



