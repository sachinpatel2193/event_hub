<!-- Events showing for Admin -->
<div class="container">
  <div class ="row">
    <% if (user_signed_in? && current_user.admin?) %>
  
    <% @events.each do |event| %>
     
        
        <!--<td><%= event.address %></td>
        
        <td><%= event.province %></td>
        <td><%= event.postal_code %></td>
        <td><%= event.country %></td>
        <td><%= event.event_date %></td>
        <td></td>-->
     
      <% if(!event.status) %>
      <table>
    <div class="col-md-4" id="event_panel">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4><i class="fa fa-fw fa-check"></i><%= event.name %></h4>
        </div>
        <div class="panel-body">
          <p><b><%= event.city %></b></p>
          <p><%=  truncate(event.description, :length => 50, :separator => '') %></p>
          <a class="btn btn-default" <%= link_to 'More About Event', event %> </a>
          <a class="btn btn-success"  <%= link_to 'Edit', edit_event_path(event) %> </a>
        </div>
      </div>
    </div>
    </table>
    <% end %>
    <% end %>        
  </div>
  <% end %>
</div>

